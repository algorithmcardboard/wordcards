<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
	<LinearLayout
	    android:id="@+id/word_layer"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">

	    <TextView
	        android:id="@+id/word_label_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/word_txt" />

	    <TextView
	        android:id="@+id/word_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/word_txt"
	        android:layout_weight="3"/>
	</LinearLayout>
    
	<LinearLayout
	    android:id="@+id/meaning_layer"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/meaning_label_txt"
	        android:text="@string/meaning_txt"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	    <TextView
	        android:id="@+id/meaning_txt"
	        android:text="@string/meaning_txt"
	        android:layout_weight="3"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/example_layer"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/example_label_txt"
	        android:text="@string/example_txt"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	    <TextView
	        android:id="@+id/example_txt"
	        android:text="@string/example_txt"
	        android:layout_weight="3"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
	</LinearLayout>
	
</LinearLayout>
